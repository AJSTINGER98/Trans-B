    <% if(error && error.length > 0){ 
        %>
    <div class="container-fluid w-100 p-0">
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    </div>

    <% } else if(success && success.length > 0) { 
        %>

    <div class="container-fluid w-100 p-0">
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    </div>
    <% } %>
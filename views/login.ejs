<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="/BOOTSTRAP_4.css" type="text/css">
    <link rel="stylesheet" href="/Fontawesome/css/all.css" type="text/css">
    <link rel="stylesheet" href="/stylesheet/login.css" type="text/css">
</head>

<body>
    <% if(error && error.length > 0){%>
    <div class="container-fluid w-100 p-0">
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    </div>

    <% } else if(success && success.length > 0) { %>

    <div class="container-fluid w-100 p-0">
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    </div>
    <% } %>
    <div class="container">
        <div class="d-flex justify-content-center">

            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Log In</h3>
                </div>
                <div class="card-body">
                    <form action="/login" method="POST">
                        <div class="input-group form-group">
                            <div class="input-group-prepend w-100">
                                <span class="input-group-text rounded-left"><i class="fas fa-user"></i></span>
                                <input name="username" class="w-100 rounded-right" type="text" placeholder=" Username" required>
                            </div>
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend w-100">
                                <span class="input-group-text rounded-left"><i class="fas fa-key"></i></span>
                                <input name="password" class="w-100 rounded-right" type="password" placeholder=" Password" required
                                    pattern=".{5,10}" title="The length of the password should be between 5 and 10">
                            </div>
                        </div>
                        <div class="align-item-center">
                            <input type="checkbox" name="RememberMe" id="remember"> Remember
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Login" class="btn btn-primary btn-block">
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center">
                                <p class="text-center">Don't have an account?<br>
                                    <a href="/register">Sign Up</a></p>
                            </div>
                        </div>    
                    </form>
                </div>
            </div>

        </div>
    </div>
    <script src="/JQuery-v.3.js"></script>
    <script src="/Popper.min.js"></script>
    <script src="/BOOTSTRAP_4.js"></script>
    <script src="/script/script.js"></script>
    <script>

    if("<%=success%>"){
        speak("<%=success%>");
    }
    else if("<%=error%>"){
        speak("<%=error%>");
    }
    </script>
</body>

</html>
<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/BOOTSTRAP_4.css" type="text/css">
    <link rel="stylesheet" href="/Fontawesome/css/all.css" type="text/css">
    <link rel="stylesheet" href="/stylesheet/register.css" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Chakra+Petch:400,700&display=swap" rel="stylesheet">

</head>

<body>
    <% if(error && error.length > 0){%>
    <div class="container-fluid w-100 p-0">
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
    </div>

    <% } else if(success && success.length > 0) { %>

    <div class="container-fluid w-100 p-0">
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
    </div>
    <% } %>
    <div class="container">
        <div class="d-flex justify-content-center">

            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Sign Up</h3>
                </div>
                <div class="card-body">
                    <form action="/register" method="POST">
                        <div class="input-group form-group">
                            <label for="username"><b>Username</b></label>
                            <div class="input-group-prepend w-100">
                                <span class="input-group-text rounded-left"><i class="fas fa-user"></i></span>
                                <input name="username" class="w-100 rounded-right" type="text" placeholder="example_1234" required>
                            </div>
                        </div>
                        <div class="input-group form-group">
                            <label for="password"><b>Password</b></label>
                            <div class="input-group-prepend w-100">
                                <span class="input-group-text rounded-left"><i class="fas fa-key"></i></span>
                                <input name="password" class="w-100 rounded-right" type="password" placeholder="between 5 to 10 characters" required
                                    pattern=".{5,10}" title="The length of the password should be between 5 and 10">
                            </div>
                        </div>
                        <div class="input-group form-group">
                            <label for="r_password"><b> Repeat Password</b></label>
                            <div class="input-group-prepend w-100 rounded">
                                <span class="input-group-text rounded-left"><i class="fas fa-lock"></i></span>
                                <input name="r_password" class="w-100 rounded-right" type="password" placeholder="type password again" required
                                    pattern=".{5,10}" title="The length of the password should be between 5 and 10">
                            </div>
                        </div>
                        <div class="input-group form-group">
                            <label for="f_name"><b>First Name</b></label>
                            <div class="input-group-prepend w-100">
                                <input name="f_name" class="w-100 rounded" type="text" placeholder="eg: Harry" required>
                            </div>
                        </div>
                        <div class="input-group form-group">
                            <label for="l_name"><b>Last Name</b></label>
                            <div class="input-group-prepend w-100">
                                <input name="l_name" class="w-100 rounded" type="text" placeholder="eg: Potter" required>
                            </div>
                        </div>



                        <div class="form-group text-center">
                            <input type="submit" value="Submit" class="btn btn-primary btn-block">
                        </div>
                        <div class="card-footer">
                            <div class="d-flex justify-content-center">
                                <p class="text-center">Already have an account?<br>
                                    <a href="/login">Log In</a></p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <script src="/JQuery-v.3.js"></script>
    <script src="/Popper.min.js"></script>
    <script src="/BOOTSTRAP_4.js"></script>
    <script src="script/script.js"></script>
    <script>
    </script>
</body>

</html>